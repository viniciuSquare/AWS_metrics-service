<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />

    <title>Upload RAW AWS Metrics Report</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles/style.css" />
    <link rel="stylesheet" href="styles/dashboards-table.css" />
    <link rel="stylesheet" href="styles/uploader-form.css" />
    <!-- ICONS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <header>
      <h1>Upload de Relat√≥rios AWS</h1>
      <!-- <div>
        <span>Capacity</span>
        <span>Billing</span>
      </div> -->
    </header>

    <div id="forms-container">
      <!-- FORMS WILL BE PLACED HERE -->
    </div>

    <div class="dashboards-table wrapper">
      <h2 class="title">Dashboards</h2>
      <table>
        <thead>
          <tr>
            <th>Dashboard Name</th>
            <th>Service</th>
            <th>Resource</th>
            <th>Product</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < dashboards.length; i++) { %>
          <tr>
            <td><%= dashboards[i].dashboardName %></td>
            <td><%= dashboards[i].service %></td>
            <td><%= dashboards[i].resource %></td>
            <td><%= dashboards[i].product %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    
  </body>

  <!-- <script src="scripts/index.js"></script> -->
  <script src="scripts/fileUploader.js"></script>
</html>
